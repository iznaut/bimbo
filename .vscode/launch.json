{
    "configurations": [
        {
            "name": "Launch Electron App",
            "program": "${workspaceFolder}/main.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "type": "node"
        },
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/main.js",
            "request": "launch",
            "args": ["--path", "./example-project"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}